            <Button text="查询"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="关于"/>
        </ToolBar>
    </top>
    <center>
        <SplitPane
                style="-fx-padding: 0;"
                dividerPositions="0.2, 0.8"
        >
            <AnchorPane>
                <TreeView
                        style="-fx-padding: 0;"
                        AnchorPane.topAnchor="0"
                        AnchorPane.rightAnchor="0"
                        AnchorPane.bottomAnchor="0"
                        AnchorPane.leftAnchor="0"
                >
                </TreeView>
            </AnchorPane>
            <AnchorPane>
                <TabPane
                        AnchorPane.topAnchor="0"
                        AnchorPane.rightAnchor="0"
                        AnchorPane.bottomAnchor="0"
                        AnchorPane.leftAnchor="0"
                >
                    <Tab text="页面1">
                        <VBox
                                style="-fx-background-color: white;"
                        >
                            <Label text="1" />
                        </VBox>
                    </Tab>
                    <Tab text="页面2">
                        <VBox
                                style="-fx-background-color: white;"
                        >
                            <Label text="2" />
                        </VBox>
                    </Tab>
                </TabPane>
            </AnchorPane>
            <AnchorPane>
                <VBox
                        style="-fx-background-color: white;"
                        AnchorPane.topAnchor="0"
                        AnchorPane.rightAnchor="0"
                        AnchorPane.bottomAnchor="0"
                        AnchorPane.leftAnchor="0"
                >
                    <Label text="test" />
                </VBox>
            </AnchorPane>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="20" style="-fx-border-color: #C8C8C8; -fx-border-width: 1px 0 0 0;">
            <padding>
                <Insets left="4" right="4"/>
            </padding>
            <HBox alignment="CENTER_LEFT" prefHeight="20">
                <Label text="状态"/>
            </HBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" prefHeight="20">
            </HBox>
        </HBox>
