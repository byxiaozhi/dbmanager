<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.zzf.dbmanager.MainController">
    <top>
        <ToolBar>
            <Button text="新建连接"/>
            <Separator/>
            <Button text="表"/>
            <Button text="视图"/>
